<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Heading" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Title" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="Category" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

</resources>
